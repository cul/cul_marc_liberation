<%= form_tag('/items', method: 'get', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag(:item_id, 'Get an Item Record:', class: 'col-sm-2 control-label') %>
    <div class="col-sm-2">
      <%= number_field_tag(:item_id, nil,  class: 'form-control', placeholder: 'Item ID') %>
    </div>
    <%= submit_tag('Submit', class: 'col-sm-1 btn btn-default') %>
  </div>
<% end %>
